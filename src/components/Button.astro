---
interface Props {
    type?: 'button' | 'submit';
    style?: 'primary' | 'secondary';
    disabled?: boolean;
    className?: string;
}

const { type = 'button', style = 'primary', disabled = false, className = '' }: Props = Astro.props;

const base = "font-medium py-2 px-4 rounded cursor-pointer hover:shadow-md focus:outline-none transition";
const variants = {
    primary: "bg-amber-400 text-slate-800 hover:bg-amber-600 active:bg-amber-700 focus:ring-2 focus:ring-amber-300",
    secondary: "bg-white text-slate-800 border border-amber-400 hover:bg-amber-100 active:bg-amber-200 focus:ring-2 focus:ring-amber-300"
}

const classes = `${base} ${variants[style] || variants.primary} ${className}`;
--- 

<button type={type} class={classes} disabled={disabled}>
    <slot />
</button>