---
interface Props {
    type?: 'button' | 'submit';
    style?: 'primary' | 'secondary';
    disabled?: boolean;
    className?: string;
}

const { type = 'button', style = 'primary', disabled = false, className = '' }: Props = Astro.props;

const base = "px-8 py-3 rounded-full font-semibold cursor-pointer";
const variants = {
    primary: "bg-gradient-to-r from-pink-500 to-yellow-400 text-white  hover:shadow-lg transform hover:-translate-y-1 active:translate-y-1 active:shadow-none transition-all duration-300",
    secondary: "border-2 border-pink-400 text-pink-600 px-8 py-3 rounded-full font-semibold cursor-pointer hover:bg-pink-50 hover:shadow-lg transition-all duration-300"
}

const classes = `${base} ${variants[style] || variants.primary} ${className}`;
--- 

<button type={type} class={classes} disabled={disabled}>
    <slot />
</button>